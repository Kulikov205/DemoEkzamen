<Page x:Class="TourAgenstvo.avtorizacia"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TourAgenstvo"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="avtorizacia">

    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" ></RowDefinition>
            <RowDefinition Height="*" ></RowDefinition>
        </Grid.RowDefinitions>
        
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock VerticalAlignment="Center" FontSize="20">Авторизация</TextBlock>
            <TextBlock VerticalAlignment="Center">Логин</TextBlock>
            <TextBox Name="login" Width="100"></TextBox>
            <TextBlock VerticalAlignment="Center">Пароль</TextBlock>
            <TextBox Name="password" Width="100"></TextBox>
            <Button Click="Vxod" Width="100" Background="#FF78F3FF">Войти</Button>
        </StackPanel>
        
    </Grid>
</Page>
